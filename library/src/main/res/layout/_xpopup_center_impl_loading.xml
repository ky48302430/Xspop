<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/_xpopup_round3_bg"
    android:orientation="horizontal"
    android:padding="15dp">

    <com.lxj.xpopup.widget.LoadingView
        android:id="@+id/loadview"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        app:endColor="@color/loading_end_color"
        app:startColor="@color/loading_start_color" />

    <com.lxj.xpopup.widget.ProgressWheel
        android:id="@+id/progressWheel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        wheel:progressIndeterminate="false" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="正在加载中"
        android:textColor="@color/_xpopup_title_color"
        android:textSize="16sp"
        android:visibility="gone" />
</LinearLayout>

